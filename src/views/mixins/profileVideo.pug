mixin video(info)
    div.video_profile_contents
        div.video_profile_thumnail
            a(href=`/videos/${info.id}`)
                img(
                    src="https://images.unsplash.com/photo-1561336313-0bd5e0b27ec8?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2070&q=80"
                    width="300"
                    height="180"
                    )
        div.video_profile_metadata
            div.video_profile_infoContainer
                h3#video_profile_title
                    a(href=`/videos/${info.id}`)=info.title
                small#video_profile_views 조회수 #{info.meta.views}회
        
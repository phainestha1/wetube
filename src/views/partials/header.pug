    //- Header
    div.logo_container
        button.modal_showing
            i.fas.fa-bars
        a(href="/").header_logo
            i.fab.fa-youtube
            h3 NomadTube
    div.search_container
        form(method="get").search_form
            input(name="search" type="text" placeholder="검색")#search_bar
            button(type="submit")#search_icon
                i.fas.fa-search
        button#search_mic 
            i.fas.fa-microphone
    nav.nav_container
        if loggedIn  
            a(href="/videos/upload")#upload
                i.fas.fa-video 
            a(href="/users/signout")#signOut
                i.fas.fa-door-open
            a(href="/")#notification
                i.far.fa-bell
            a(href=`/users/${loggedInUser._id}`)
                if loggedInUser.socialOnly
                    img(src=loggedInUser.avatarUrl).header_profileImage 
                else
                    img(src="/" + loggedInUser.avatarUrl).header_profileImage 
        else 
            a(href="/signin")#signIn
                i.far.fa-user-circle 
                label(for="signIn") 로그인


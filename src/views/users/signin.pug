extends ../templates/base

block content
    div.signin_body
        if errorMessage
            span=errorMessage
        div.signin_container
            div.signin_logobox
                i.fab.fa-youtube
                h3 NomadTube        
            div.signin_form
                form(method="post")
                    input(name="username" type="text" placeholder="아이디" required) 
                    input(name="password" type="password" placeholder="비밀번호" required)
                    button(type="submit") 로그인
            div.signin_github
                a(href="/users/github/start")
                    span Github로 계속하기 
                    i.fab.fa-github 
                a(href="/users/kakao/start")
                    span 카카오로 계속하기 
                    i.fab.fa-github 
            div.signin_signup_request
                span 계정이 없으신가요?
                a(href="/signup") 
                    span 회원 가입 
                    i.fas.fa-user-plus
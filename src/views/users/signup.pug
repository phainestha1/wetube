extends ../templates/base

block content
    div.signup_body
        if errorMessage 
            span=errorMessage
        div.signup_container
            div.signup_logobox
                i.fab.fa-youtube
                h3 NomadTube 
            div.signup_form
                form(method="post")
                    input(name="username" type="text" placeholder="아이디" required)
                    input(name="name" type="text" placeholder="이름" required)
                    input(name="email" type="email" placeholder="이메일" required)
                    input(name="password" type="password" placeholder="비밀번호" required)
                    input(name="pwConfirmation" type="password" placeholder="비밀번호 확인" required)
                    input(name="location" type="text" placeholder="거주지" required)
                    button(type="submit") 회원 가입
        div.signup_signin_request
            span 계정이 있으신가요?     
            a(href="/signin")
                span 로그인  
                i.far.fa-user-circle